  {
    "name": "Background",
    "version": "1.0",
    "description": "Extension for your don't eye pain!",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
    	{
    	"matches": ["http://*/*"],
    	"css":["myStyles.css"],
    	"js":["contentScript.js"]
    	}
    ],
    "icons": {
       "16": "images/cat.png",
        "32": "images/cat.png",
        "48": "images/cat.png",
        "128": "images/cat.png"
    },
    "permissions": ["storage","https://*.google.com/", "activeTab"],
    "browser_action": {
      "default_icon": "images/cat.png",
      "default_popup": "popup.html"
    },
      "commands": {
          "toggle-feature-foo": {
            "suggested_key": {
              "default": "Ctrl+Shift+Y",
              "windows": "Ctrl+Shift+Y",
              "mac": "Command+Shift+Y"
            },
            "description": "Toggle feature foo",
            "global": true
          },
          "_execute_browser_action": {
            "suggested_key": {
              "windows": "Ctrl+Shift+M",
              "mac": "Command+Shift+Y",
              "chromeos": "Ctrl+Shift+U",
              "linux": "Ctrl+Shift+J"
            }
          },
          "_execute_page_action": {
            "suggested_key": {
              "default": "Ctrl+Shift+E",
              "windows": "Alt+Shift+P",
              "mac": "Alt+Shift+P"
            }
          }
        },
    "manifest_version": 2
  }